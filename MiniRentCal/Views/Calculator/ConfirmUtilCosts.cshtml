@model UtilityModel
@{
    ViewData["Title"] = "Xác nhận chi phí tiện ích";
}

<div class="d-flex align-items-center justify-content-center">
    <div class="w-100" style="max-width: 400px;">
        <h1 class="text-center mb-4">Xác nhận chi phí tiện ích</h1>
        <p class="text-center mb-4">Vui lòng kiểm tra và cập nhật các chi phí tiện ích trước khi tiếp tục.</p>

        <!-- Utility Cost Form -->
        <form method="post" asp-action="SaveUtilityCosts">
            <!-- Electric Cost -->
            <div class="mb-3">
                <label for="ElectricCost" class="form-label">Chi phí điện</label>
                <div class="input-group">

                    <input type="number" class="form-control" id="ElectricCost" name="ElectricCost" value="@Model.ElectricCost" step="0.01" required />
                </div>
            </div>

            <!-- Water Cost -->
            <div class="mb-3">
                <label for="WaterCost" class="form-label">Chi phí nước</label>
                <div class="input-group">

                    <input type="number" class="form-control" id="WaterCost" name="WaterCost" value="@Model.WaterCost" step="0.01" required />
                </div>
            </div>

            <!-- Garbage Cost -->
            <div class="mb-3">
                <label for="GarbageCost" class="form-label">Chi phí rác</label>
                <div class="input-group">

                    <input type="number" class="form-control" id="GarbageCost" name="GarbageCost" value="@Model.GarbageCost" step="0.01" required />
                </div>
            </div>

            <!-- Form Buttons -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary w-48">Xác nhận và lưu</button>
                <button type="reset" class="btn btn-secondary w-48">Đặt lại</button>
            </div>
        </form>
    </div>
</div>