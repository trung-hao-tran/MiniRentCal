@model UtilityModel

<div class="utility-floating-card">
    <div class="utility-card-header">
        <h5>
            <i class="fas fa-coins me-2"></i>
            Giá Dịch Vụ Hiện Tại
        </h5>
    </div>
    <div class="utility-card-body">
        <form asp-action="UpdateUtility" method="post" id="utilityForm">
            <input type="hidden" asp-for="Id" />

            <div class="utility-item">
                <label asp-for="ElectricCost">
                    <i class="fas fa-bolt me-1"></i>
                    Giá Điện
                </label>
                <div class="input-group">
                    <input asp-for="ElectricCost"
                           class="form-control"
                           type="number"
                           step="0.01" 
                           />
                </div>
            </div>

            <div class="utility-item">
                <label asp-for="WaterCost">
                    <i class="fas fa-tint me-1"></i>
                    Giá Nước
                </label>
                <div class="input-group">
                    <input asp-for="WaterCost"
                           class="form-control"
                           type="number"
                           step="0.01" 
                           />
                </div>
            </div>

            <div class="utility-item">
                <label asp-for="GarbageCost">
                    <i class="fas fa-trash-alt me-1"></i>
                    Phí Rác
                </label>
                <div class="input-group">
                    <input asp-for="GarbageCost"
                           class="form-control"
                           type="number"
                           step="0.01"
                           />
                </div>
            </div>

            <div class="utility-item">
                <button type="submit" class="utility-update-btn">
                    <i class="fas fa-save me-1"></i>
                    Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>