@model UtilityModel

<div>
    <form asp-action="UpdateUtility" method="post" id="utilityForm">
        <input type="hidden" asp-for="Id" />

        <!-- Modal Body Content -->
        <div class="mb-3">
            <label asp-for="ElectricCost" class="form-label">
                <i class="fas fa-bolt me-1"></i>
                Giá Điện
            </label>
            <input asp-for="ElectricCost" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="mb-3">
            <label asp-for="WaterCost" class="form-label">
                <i class="fas fa-tint me-1"></i>
                Giá Nước
            </label>
            <input asp-for="WaterCost" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="mb-3">
            <label asp-for="GarbageCost" class="form-label">
                <i class="fas fa-trash-alt me-1"></i>
                Phí Rác
            </label>
            <input asp-for="GarbageCost" class="form-control" type="number" step="0.01" required />
        </div>

        <!-- Modal Footer -->
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        </div>
    </form>
</div>
